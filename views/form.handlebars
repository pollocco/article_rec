<div id="add-app" class="container">
    <div class="tile is-ancestor">
        <div class="tile is-vertical is-6">
            <span class="title has-text-centered">Add to our collection</span>
            <div class="tile">
                <div class="tile is-parent is-vertical">
                    <article class="tile is-child  has-background-light">
                            <section class="section">
                                <form class="form">
                                    <legend class="subtitle">Add an Article</legend>
                                    <label class="label">Title</label>
                                    <div class="control">
                                        <input v-model="articleTitle" class="input" type="text" placeholder="Title"/>
                                    </div>
                                    <label class="label">Content</label>
                                    <div class="control">
                                        <input v-model="articleContent" class="input" type="textarea" placeholder="Short description"/>
                                    </div>
                                    <label class="label">URL</label>
                                    <div class="control">
                                        <input v-model="articleUrl" class="input" type="text" placeholder="http://"/>
                                    </div>
                                    <div class="control">
                                        <button class="button is-success" style="margin-top: 2rem;" onclick="showAlert();">Add Article</button>
                                    </div>
                                </form>
                            </section>
                    </article>
                </div>
            </div>
        </div>
        <div class="tile is-vertical is-6">
            <p class="title" style="visibility: hidden;">And be our star</p>
            <div class="tile">
                <div class="tile is-parent is-vertical">
                    <article class="tile is-child">
                        <p class="article-title is-size-5 has-text-weight-bold has-text-dark">\{{articleTitle}}</p>
                        <p class="article-content is-size-6 has-text-grey-dark">\{{articleContent}}</p>
                        <a>\{{articleUrl}}</a>
                    </article>
                </div>
            </div>
        </div>
    </div>
        <div class="tile is-ancestor">
        <div class="tile is-vertical is-6">
            <div class="tile">
                <div class="tile is-parent is-vertical">
                    <article class="tile is-child">
                            <section class="section">
                                <form class="form">
                                    <legend class="subtitle">Add an Author</legend>
                                    <label class="label">First Name</label>
                                    <div class="control">
                                        <input v-model="firstName" class="input" type="text" placeholder="First Name"/>
                                    </div>
                                    <label class="label">Last Name</label>
                                    <div class="control">
                                        <input v-model="lastName" class="input" type="text" placeholder="Last Name"/>
                                    </div>
                                    <div class="control">
                                        <button class="button is-success" style="margin-top: 2rem;" onclick="showAlert();">Add Author</button>
                                    </div>
                                </form>
                            </section>
                    </article>
                </div>
            </div>
        </div>
        <div class="tile is-vertical is-6">
            <div class="tile">
                <div class="tile is-parent is-vertical">
                    <article class="tile is-child">
                        <p class="article-title is-size-5 has-text-grey-dark">\{{firstName}}</p>
                        <p class="article-title is-size-5 has-text-weight-bold has-text-dark">\{{lastName}}</p>
                    </article>
                </div>
            </div>
        </div>
    </div>
        <div class="tile is-ancestor">
        <div class="tile is-vertical is-6">
            <div class="tile">
                <div class="tile is-parent is-vertical">
                    <article class="tile is-child  has-background-light">
                            <section class="section">
                                <form class="form">
                                    <legend class="subtitle">Add a Periodical</legend>
                                    <label class="label">Periodical Name</label>
                                    <div class="control">
                                        <input v-model="periodicalName" class="input" type="text" placeholder="Better be real"/>
                                    </div>
                                    <label class="label">Periodical URL</label>
                                    <div class="control">
                                        <input v-model="periodicalUrl" class="input" type="text" placeholder="Don't lie to us"/>
                                    </div>
                                    <div class="control">
                                        <button class="button is-success" style="margin-top: 2rem;" onclick="showAlert();">Add Periodical</button>
                                    </div>
                                    
                                </form>
                        </section>
                    </article>
                </div>
            </div>
        </div>
        <div class="tile is-vertical is-6">
            <div class="tile">
                <div class="tile is-parent is-vertical">
                    <article class="tile is-child">
                        <p class="article-title is-size-5 has-text-weight-bold has-text-dark">\{{periodicalName}}</p>
                        <a>\{{periodicalUrl}}</a>
                    </article>
                </div>
            </div>
        </div>
    </div>
</div>
